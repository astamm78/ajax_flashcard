<div class="container">
  <p>You need to create an account,<br>deal with it.</p>

  <% if @errors %>
    <p class="errors"><%= @errors %>
  <% end %>

  <form id ="sign_up" action="/sign_up" method="post">
    <h3>Create new account:</h3>

    <input class="textbox" type="text" name="full_name" placeholder="Enter your full name here!">
    <input class="textbox" type="text" name="email" placeholder="Enter your email here!">
    <input class="textbox" type="password" name="password" placeholder="Enter password here!"><br>
    <input type="submit" value="sign up">
  </form>

</div>
